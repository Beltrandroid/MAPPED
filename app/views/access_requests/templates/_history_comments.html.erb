        <small class="nonselect">
          <a data-toggle="modal" data-target="#exampleModal">
            <%= image_tag "circle-with-plus.svg", height: 18 %>
            &nbsp;upload response or generate letter</a>
        </small><br/>
        <small>
          <ul class="list-unstyled">
            <li class="media">
              <%= image_tag "document.jpg", class: 'mr-3', height: 100, width: 70 %>
              <div class="media-body">
                <h6 class="mt-0 mb-1" style="color:green">
                  <%= image_tag "download_green.svg", height: 18 %>
                  &nbsp;&nbsp;Final response received</h6>
